<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 
<div class="w-full wrapper">
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Đăng ký</h3>
				<div class="d-flex justify-content-end social_icon">
					<span><i class="fab fa-facebook-square"></i></span>
					<span><i class="fab fa-google-plus-square"></i></span>
					<span><i class="fab fa-twitter-square"></i></span>
				</div>
			</div>
			<div class="card-body">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
            <%= form.text_field :name,placeholder:"Name", class:"form-control" %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-phone"></i></span>
						</div>
            <%= form.text_field :mobile,placeholder:"SDT", class:"form-control" %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-mail-bulk"></i></span>
						</div>
            <%= form.text_field :email,placeholder:"Email", class:"form-control" %>
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-address-book"></i></span>
						</div>
            <%= form.text_field :address,placeholder:"Địa chỉ", class:"form-control" %>
					</div>

					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= form.password_field :password, placeholder:"Mật khẩu", class:"form-control" %>

					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-key"></i></span>
						</div>
            <%= form.password_field :password_confirmation, placeholder:"Nhập lại mật khẩu", class:"form-control" %>
					</div>
					<div class="form-group">
              <%= form.submit %>
					</div>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					Bạn đã có tài khoản? <%= link_to "Đăng nhập", '/login' %>
				</div>
			</div>
		</div>
	</div>
</div>
</div>

<% end %>
